{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80],
  "files.associations": {
    "boilerplate.json": "jsonc"
  },
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.workingDirectories": [
    ".",
    "packages/boring-router/src/library",
    "packages/boring-router/src/test",
    "packages/boring-router-react/src/library",
    "packages/examples/basic",
    "packages/examples/lifecycle-hooks",
    "packages/examples/parallel-routes",
    "packages/examples/route-content"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "handlebars"
  ],
  "cSpell.enableFiletypes": ["mdx"],
  "cSpell.words": [
    "Parens",
    "autorun",
    "browserslist",
    "docz",
    "hrefs",
    "magicspace",
    "mobx",
    "tsbuildinfo",
    "tslang",
    "tslib",
    "typecheck",
    "typeof"
  ]
}
